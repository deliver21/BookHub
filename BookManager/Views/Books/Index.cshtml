@{
    Layout = null;
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books Table</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/book.css">
</head>
<body>
    <div class="container mb-4">
        <div class="row m-1 text-end">
            <div class="col-10"></div>
            <div class="col-2">
                <button id="exportButton" type="button" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-down"></i>
                </button>
            </div> 
        </div>
        <div class="row m-3">
            <div class="col-lg-3 col-md-6 mb-2 form-floating">
                <select id="language" class="form-control" onChange="loadBooks()">
                    <option value="en">English (USA)</option>
                    <option value="de">German (Germany)</option>
                    <option value="fr">French (France)</option>
                </select>
                <label for="language" class="ms-2">Language:</label>
            </div>
            <div class="col-lg-3 col-md-6 mb-2 d-inline-flex form-floating text-center">
                <input type="text" id="seed" class="form-control text-center p-3" value="100000" placeholder="Seed: 58933423" onChange="loadBooks()">
                <label for="seed" class="ms-2">Seed:</label>
                <button type="button" class="btn btn-secondary btn-sm m-1 mt-4" style="height:30px" onclick="generateRandomSeed()"><i class="bi bi-bullseye"></i></button>
            </div>
            <div class="col-lg-3 col-md-6 mb-2 form-group">
                <label for="avgLikes" class="ms-2">Likes</label>
                <input type="range" id="avgLikes" class="form-range" min="0" max="10" step="0.1" onChange="loadBooks()">
                <ul class="list-inline d-flex justify-content-around">
                    <li><p class="m-0">0</p></li>
                    <li><p class="m-0">2</p></li>
                    <li><p class="m-0">4</p></li>
                    <li><p class="m-0">6</p></li>
                    <li><p class="m-0">8</p></li>
                    <li><p class="m-0">10</p></li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 mb-2 form-floating">
                <input id="avgReviews" class="form-control" type="number" value="2.5" min="1.0" max="5" step="0.1" onChange="loadBooks()">
                <label for="avgReviews" class="ms-2">Reviews:</label>
            </div>
        </div>

        <table class="table table-striped table-hover table-responsive" id="booksTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Author(s)</th>
                    <th>Publisher</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/book.js"></script>
</body>
</html>
